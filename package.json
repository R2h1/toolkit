{
  "name": "edmi-toolkit",
  "version": "1.0.2",
  "description": "工具函数库",
  "main": "./lib/toolkit.cjs.js",
  "module": "./lib/toolkit.esm.js",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "sideEffects": false,
  "scripts": {
    "prepare": "husky install",
    "tsc": "tsc --watch",
    "dev": "rollup -w --environment NODE_ENV:development -c scripts/rollup.config.dev.js",
    "buildjs": "rollup --environment NODE_ENV:development -c scripts/rollup.config.prod.js",
    "buildts": "tsc",
    "copy": "copy package.json lib && copy package-lock.json lib && copy README.md lib",
    "build": "run-s z buildjs buildts copy",
    "test": "jest",
    "test:c": "jest --coverage",
    "pub": "npm publish --access=public  --registry https://registry.npmjs.org/",
    "x": "npm --no-git-tag-version version major",
    "y": "npm --no-git-tag-version version minor",
    "z": "npm --no-git-tag-version version patch"
  },
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/R2h1/toolkit.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/R2h1/toolkit/issues"
  },
  "homepage": "https://github.com/R2h1/toolkit#readme",
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.8",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.21.5",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/node": "^20.2.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^2.0.2",
    "tslib": "^2.5.2"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-eslint": "^9.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1"
  },
  "lint-staged": {
    "(src|scripts)/**/*.{tsx,ts,jsx,js,css}": [
      "prettier --config .prettierrc.js --write",
      "eslint --fix",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
